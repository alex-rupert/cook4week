{% extends '::baseAdmin.html.twig' %}

{% block body %}
<!-- Header -->
<header>
    <div class="container" id="maincontent" tabindex="-1">
        <div class="row">
            <div class="col-lg-12">
                <img class="img-responsive" src="img/profile.png" alt="">
                <div class="intro-text">
                    <h1 class="name">{{ 'crud.form.edit'|trans }} : {{ ('entity.label.'~getClassName(entity)|lower)|transchoice(1) }}</h1>
                    <hr class="star-light">                    
                    {% if crudDefinition is defined %}
                        <span class="skills">{{ crudDefinition|trans }}</span>
                        <hr class="star-light">
                    {% endif %}
                    
                    {{ include('AdminBundle:Crud/Form:editDefault.html.twig') }}
                </div>
            </div>
        </div>
    </div>
</header>
{% endblock %}
