{% extends '::baseAdmin.html.twig' %}

{% block body %}
<!-- Header -->
<header>
    <div class="container" id="maincontent" tabindex="-1">
        <div class="row">
            <div class="col-lg-12">
                <img class="img-responsive" src="img/profile.png" alt="">
                <div class="intro-text">
                    <h1 class="name">{{ 'crud.form.list'|trans }} : {{ ('entity.label.'~classLabel)|transchoice(2) }}</h1>
                    <hr class="star-light">                    
                    {% if crudDefinition is defined %}
                        <span class="skills">{{ crudDefinition|trans }}</span>
                        <hr class="star-light">
                    {% endif %}
                    
                    <div class="color-black">
                        {{ datatable({
                                'edit_route' : classLabel~'_edit',
                                'js' : {
                                    'sAjaxSource' : path(classLabel~'_datatable')
                                }
                            })
                        }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>
{% endblock %}
