<!-- Navigation -->
<nav id="mainNav" class="navbar navbar-default navbar-fixed-top navbar-custom">
    <div class="container">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header page-scroll">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span> Menu <i class="fa fa-bars"></i>
            </button>
            <a class="navbar-brand" href="{{ path('admin_homepage') }}">
                {{ 'company.name'|trans }} <i class="fa fa-cutlery" aria-hidden="true"></i>
            </a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                        {{ 'entity.label.fridge'|transchoice(-1) }} <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        {% for fridge in app.user.fridges %}
                            <li><a href="#">{{ fridge.name }}</a></li>
                            {% if loop.last %}    
                                <li role="separator" class="divider"></li>
                            {% endif %}
                        {% endfor %}
                        <li><a href="{{ path('fridge_new') }}">{{ 'crud.form.create'|trans }} : {{ 'entity.label.fridge'|transchoice(1) }}</a></li>
                    </ul>
                </li>
                {% if is_granted('ROLE_ADMIN') %}
                    <li>
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            {{ 'entity.label.product'|transchoice(2) }} <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="{{ path('product_index') }}">{{ 'crud.form.list'|trans }}</a></li>
                            <li><a href="{{ path('product_new') }}">{{ 'crud.form.create'|trans }}</a></li>
                        </ul>
                    </li>
                {% endif %}
            </ul>
        </div>
        <!-- /.navbar-collapse -->
    </div>
    <!-- /.container-fluid -->
